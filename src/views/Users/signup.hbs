<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                Account Register
            </div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <label for="">Name</label>
                        <input
                            type="text"
                            class="form-control"
                            name="name"
                            value="{{name}}"
                        >
                    </div>
                    <div class="form-group">
                        <label for="">Email</label>
                        <input
                            type="email"
                            class="form-control"
                            name="email"
                            value="{{email}}"
                        >
                    </div>
                    <div class="form-group">
                        <label for="">Password</label>
                        <input
                            type="password"
                            class="form-control"
                            name="password"
                        >
                    </div>
                    <div class="form-group">
                        <label for="">Confirm Password</label>
                        <input
                            type="password"
                            class="form-control"
                            name="confirm_password"
                        >
                    </div>
                    <button class="btn btn-secondary btn-block">SignUp</button>
                </form>
            </div>
        </div>
    </div>
</div>